using System;

class MemeEngineerGuide
{
    static void Main()
    {
        Console.WriteLine("Добро пожаловать в 'Памятку инженера'!");
        Console.WriteLine("Ответьте на несколько вопросов, чтобы найти решение вашей проблемы.");

        // Первый вопрос
        Console.Write("Проблема решена перезагрузкой? (ДА/НЕТ): ");
        string answer1 = Console.ReadLine().ToUpper();

        if (answer1 == "ДА")
        {
            Console.WriteLine("Отлично! Проблема решена.");
        }
        else
        {
            // Второй вопрос
            Console.Write("Проблема связана с программированием? (ДА/НЕТ): ");
            string answer2 = Console.ReadLine().ToUpper();

            if (answer2 == "ДА")
            {
                // Третий вопрос
                Console.Write("Можно ли исправить проблему путем добавления дополнительного уровня абстракции? (ДА/НЕТ): ");
                string answer3 = Console.ReadLine().ToUpper();

                if (answer3 == "ДА")
                {
                    Console.WriteLine("Отлично! Просто добавьте еще один уровень абстракции.");
                }
                else
                {
                    Console.WriteLine("Похоже, проблема требует более сложного подхода. Обратитесь к специалисту.");
                }
            }
            else
            {
                // Четвертый вопрос
                Console.Write("Проблема связана с оборудованием? (ДА/НЕТ): ");
                string answer4 = Console.ReadLine().ToUpper();

                if (answer4 == "ДА")
                {
                    // Пятый вопрос
                    Console.Write("Помогло ли обновление драйверов? (ДА/НЕТ): ");
                    string answer5 = Console.ReadLine().ToUpper();

                    if (answer5 == "ДА")
                    {
                        Console.WriteLine("Великолепно! Обновление драйверов решило проблему.");
                    }
                    else
                    {
                        Console.WriteLine("К сожалению, придется заменить оборудование.");
                    }
                }
                else
                {
                    Console.WriteLine("Не уверен, что могу помочь. Попробуйте обратиться к другому источнику.");
                }
            }
        }
    }
}
